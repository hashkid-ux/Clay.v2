{
  "name": "caly-voice-agent-backend",
  "version": "1.0.0",
  "description": "Caly Voice AI - Hindi/Hinglish E-commerce Voice Agent Platform",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node scripts/init-db.js",
    "deploy": "node scripts/init-db.js && node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "voice-ai",
    "ecommerce",
    "customer-support",
    "hindi",
    "hinglish",
    "shopify",
    "openai",
    "realtime-api"
  ],
  "author": "Caly Voice AI",
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "connect-pg-simple": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "agents/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "db/**/*.js",
      "utils/**/*.js",
      "realtime/**/*.js",
      "sessions/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "test/",
      "*.test.js"
    ],
    "delay": "1000"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage/",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!test/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hashkid-ux/caly-voice-ai.git"
  },
  "bugs": {
    "url": "https://github.com/hashkid-ux/caly-voice-ai/issues"
  },
  "homepage": "https://github.com/hashkid-ux/caly-voice-ai#readme"
}
